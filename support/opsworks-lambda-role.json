{
   "Version":"2012-10-17",
   "Statement":[
      {
         "Effect":"Allow",
         "Action":[
            "s3:Put*"
         ],
         "Resource":[
            "arn:aws:s3:::OPSWORKSARTIFACTBUCKET/*"
         ]
      },
      {
         "Effect":"Allow",
         "Action":[
            "opsworks:CreateDeployment",
            "opsworks:DescribeDeployments",
            "opsworks:DescribeLayers",
            "opsworks:DescribeInstances"
         ],
         "Resource":[
            "OPSWORKSARN"
         ]
      },
      {
         "Effect":"Allow",
         "Action":[
            "SNS:Publish"
         ],
         "Resource":[
            "SNSTOPICARN"
         ]
      },
      {
         "Effect":"Allow",
         "Action":[
            "codepipeline:PollForJobs",
            "codepipeline:PutJob*",
            "codepipeline:AcknowledgeJob"
         ],
         "Resource":[
            "*"
         ]
      },
      {
         "Effect":"Allow",
         "Action":[
            "logs:*"
         ],
         "Resource":"arn:aws:logs:*:*:*"
      }
   ]
}